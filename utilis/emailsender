const nodemailer = require("nodemailer");
require("dotenv").config();

const transporter = nodemailer.createTransport({
    host: process.env.EMAIL_HOST,
    port: process.env.EMAIL_PORT,
    secure: false,
    auth: {
        user: process.env.EMAIL_USER,
        pass: process.env.EMAIL_PASS,
    },
});

// wysyÅ‚anie e-maila
const sendWateringReminder = async (email, plantName, wateringDate) => {
    const mailOptions = {
        from: process.env.EMAIL_USER,
        to: email,
        subject: ` Czas podlaÄ‡ TwojÄ… roÅ›linÄ™: ${plantName}!`,
        text: `Hej!  Twoja roÅ›lina "${plantName}" wymaga podlania dnia ${wateringDate}. Nie zapomnij o niej! ğŸ˜Š`,
    };

    try {
        await transporter.sendMail(mailOptions);
        console.log(` Powiadomienie e-mail wysÅ‚ane do ${email}`);
    } catch (error) {
        console.error(" BÅ‚Ä…d wysyÅ‚ania e-maila:", error);
    }
};

module.exports = { sendWateringReminder };
